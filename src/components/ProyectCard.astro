---
const { title, description, link, email, img } = Astro.props;

const hasAnyData = title || description || link || email || img;
---

{hasAnyData ? (
    <div class="proyecto-card border border-white p-4 rounded shadow-md">

        {title && (
            <h2 class="text-xl font-bold mb-2 text-purple-600">{title}</h2>
        )}

        {img && (
            <div class="bg-gray-800 rounded-lg overflow-hidden border border-gray-700 mb-4">
                <div class="h-7 bg-gray-700 flex items-center px-3 gap-1">
                    <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                    <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
                    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                </div>
                <img src={img} alt={title ?? "Captura del proyecto"} class="w-full rounded-b-lg" loading="lazy" />
            </div>
        )}

        {description && (
            <p class="text-white mb-4">{description}</p>
        )}

        {link && (
            <a href={link} class="text-blue-500 hover:underline">Ver proyecto</a>
        )}

        {email && (
            <p class="text-sm text-white mt-2">Contacto: {email}</p>
        )}

    </div>
) : null}
