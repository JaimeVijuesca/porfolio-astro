---
import PersonImg from "./PersonImg.astro";
import ProyectCard from "./ProyectCard.astro";
import { hardSkills } from "../data/hardskill.js";
import { softSkills } from "../data/softskill.js";
---

<div class="max-w-6xl mx-auto px-4">
  <!-- Hero: imagen + info (responsive) -->
  <div class="flex flex-col md:flex-row items-start gap-6 py-8">
    <div
      class="flex-none w-36 h-36 md:w-48 md:h-48 rounded-full overflow-hidden bg-white/5 flex items-center justify-center"
    >
      <PersonImg />
    </div>

    <div class="flex-1 flex flex-col justify-center">
      <p class="text-lg mb-2 text-white font-medium">Hola, soy Jaime</p>
      <p class="text-4xl font-bold mb-4 text-white">
        Desarrollador Full Stack Junior
      </p>

      <div class="flex items-center gap-4 mb-3">
        <button
          type="button"
          class="border border-white bg-black text-white px-4 py-2 rounded shadow transition cursor-default text-sm font-medium hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
          aria-disabled="true"
        >
          Disponible para trabajar
        </button>
        <p class="text-white/80">Desarrollador Junior · Zaragoza, España</p>
      </div>

      <div class="flex flex-wrap gap-3 mt-2">
        <button
          type="button"
          class="flex items-center border border-white bg-black text-white px-3 py-2 rounded shadow hover:bg-pink-600 transition"
        >
          <!-- Instagram SVG -->
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm4.25 3.25a5.25 5.25 0 1 1 0 10.5 5.25 5.25 0 0 1 0-10.5zm0 1.5a3.75 3.75 0 1 0 0 7.5 3.75 3.75 0 0 0 0-7.5zm5.25.75a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"
            ></path>
          </svg>
          Instagram
        </button>

        <button
          type="button"
          class="flex items-center bg-black text-white px-3 py-2 rounded shadow hover:bg-blue-600 transition border border-white"
        >
          <!-- Linkedin SVG -->
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M19 3A2 2 0 0 1 21 5v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14zm-9.75 7.5h-2.5v8h2.5v-8zm-1.25-4a1.25 1.25 0 1 0 0 2.5 1.25 1.25 0 0 0 0-2.5zm6.25 4h-2.4v1.1h.03c.33-.63 1.14-1.3 2.36-1.3 2.52 0 3 .83 3 3v4.9h-2.5v-4.4c0-1.05-.02-2.4-1.46-2.4-1.46 0-1.68 1.14-1.68 2.32v4.48h-2.5v-8h2.4v1.1h.03c.33-.63 1.14-1.3 2.36-1.3 2.52 0 3 .83 3 3v4.9z"
            ></path>
          </svg>
          LinkedIn
        </button>

        <button
          type="button"
          class="flex items-center bg-black text-white px-3 py-2 rounded shadow hover:bg-gray-900 transition border border-white"
        >
          <!-- GitHub SVG -->
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 2C6.48 2 2 6.58 2 12.26c0 4.52 2.87 8.36 6.84 9.72.5.09.68-.22.68-.48 0-.24-.01-.87-.01-1.7-2.78.61-3.37-1.36-3.37-1.36-.45-1.17-1.1-1.48-1.1-1.48-.9-.63.07-.62.07-.62 1 .07 1.53 1.05 1.53 1.05.89 1.56 2.34 1.11 2.91.85.09-.65.35-1.11.63-1.37-2.22-.26-4.56-1.14-4.56-5.07 0-1.12.39-2.03 1.03-2.75-.1-.26-.45-1.29.1-2.68 0 0 .84-.28 2.75 1.05a9.38 9.38 0 0 1 2.5-.34c.85 0 1.71.11 2.5.34 1.91-1.33 2.75-1.05 2.75-1.05.55 1.39.2 2.42.1 2.68.64.72 1.03 1.63 1.03 2.75 0 3.94-2.34 4.81-4.57 5.07.36.32.68.94.68 1.89 0 1.36-.01 2.46-.01 2.8 0 .27.18.58.69.48A10.01 10.01 0 0 0 22 12.26C22 6.58 17.52 2 12 2z"
            ></path>
          </svg>
          GitHub
        </button>
      </div>
    </div>
  </div>

  <!-- Proyectos: título + grid separado -->
  <section class="mt-8">
    <h1 class="text-3xl font-bold mb-6 text-white">
      Proyectos más importantes
    </h1>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <ProyectCard
        title="Porfolio Responsive"
        description="Creación de un Porfolio usando React y con un backend en Spring Boot para gestionar mis Cvs"
        img="/assets/images/porfolio.png"
        link="https://jaime-bice.vercel.app/"
        email="jaimetrabajo@gmail.com"
      />
      <ProyectCard />
      <ProyectCard />
      <ProyectCard />
    </div>
  </section>

  <!-- Habilidades -->
  <section class="max-w-4xl mx-auto py-12">
    <h2 class="text-3xl font-bold mb-8 text-white">Habilidades</h2>
    <!-- Hard Skills -->
    <h3 class="text-xl font-semibold text-white mb-4">Hard Skills</h3>
    <div class="flex mb-10 gap-4 flex-wrap">
      {
        hardSkills.map((skill) => (
          <div class="bg-white/5 p-4 rounded-lg flex flex-col items-center">
            <img src={skill.icon} alt={skill.name} class="w-12 h-12 mb-2" />
            <p class="text-white text-center">{skill.name}</p>
          </div>
        ))
      }
    </div>

    <!-- Soft Skills -->
    <div class="mt-10">
      <h3 class="text-xl font-semibold text-white mb-4">Soft Skills</h3>
      <ul class="space-y-3"></ul>
    </div>
  </section>

  <!--  -->
</div>

<style>
  /* Mantener la imagen centrada en su contenedor si PersonImg no lo hace */
  .rounded-full > img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
